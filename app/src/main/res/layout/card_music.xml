<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        card_view:cardElevation="0dp"
        card_view:cardBackgroundColor="@android:color/transparent">

        <RelativeLayout
            android:id="@+id/relative_card"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cover_music"
                    android:layout_width="match_parent"
                    android:layout_height="203dp"
                    android:src="@drawable/cover_ex" />

            </LinearLayout>
            <View
                android:id="@+id/view"
                android:layout_below="@+id/linear_img"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff"/>

            <LinearLayout
                android:id="@+id/linear_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_below="@+id/view"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/title_music"
                    android:layout_width="261dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|left"
                    android:text="@string/title_ex"
                    android:paddingBottom="20dp"
                    android:textSize="5pt"
                    android:textColor="@color/colorTitleCard"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="0.8"/>

                <TextView
                    android:id="@+id/time_music"
                    android:layout_toRightOf="@+id/title_music"
                    android:layout_below="@+id/view"
                    android:gravity="center_horizontal|center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="10dp"
                    android:textColor="@color/colorTime"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:layout_weight="0.3"
                    android:text="4:45" />

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>